<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="语文"
                android:textSize="24dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                />

            <EditText
                android:id="@+id/getChineseScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/translucent"
                android:layout_marginHorizontal="12dp"
                android:hint="请输入语文成绩"
                android:textColorHint="#7B7D7D"
                android:textCursorDrawable="@null"
                android:textSize="20sp"
                android:singleLine="true"
                android:inputType="numberDecimal"
                />

            <EditText
                android:id="@+id/getChineseCredit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/translucent"
                android:layout_marginHorizontal="12dp"
                android:hint="请输入语文学分"
                android:textColorHint="#7B7D7D"
                android:textCursorDrawable="@null"
                android:textSize="20sp"
                android:singleLine="true"
                android:inputType="numberDecimal"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="高数"
                android:textSize="24dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/getMathScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/translucent"
                android:layout_marginHorizontal="12dp"
                android:hint="请输入高数成绩"
                android:textColorHint="#7B7D7D"
                android:textCursorDrawable="@null"
                android:textSize="20sp"
                android:singleLine="true"
                android:inputType="numberDecimal"
                />

            <EditText
                android:id="@+id/getMathCredit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/translucent"
                android:layout_marginHorizontal="12dp"
                android:hint="请输入高数学分"
                android:textColorHint="#7B7D7D"
                android:textCursorDrawable="@null"
                android:textSize="20sp"
                android:singleLine="true"
                android:inputType="numberDecimal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="大英"
                android:textSize="24dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/getEnglishScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/translucent"
                android:layout_marginHorizontal="12dp"
                android:hint="请输入大英成绩"
                android:textColorHint="#7B7D7D"
                android:textCursorDrawable="@null"
                android:textSize="20sp"
                android:singleLine="true"
                android:inputType="numberDecimal"
                />

            <EditText
                android:id="@+id/getEnglishCredit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/translucent"
                android:layout_marginHorizontal="12dp"
                android:hint="请输入大英学分"
                android:textColorHint="#7B7D7D"
                android:textCursorDrawable="@null"
                android:textSize="20sp"
                android:singleLine="true"
                android:inputType="numberDecimal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="计算机"
                android:textSize="24dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/getComputerScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/translucent"
                android:layout_marginHorizontal="12dp"
                android:hint="请输入计算机成绩"
                android:textColorHint="#7B7D7D"
                android:textCursorDrawable="@null"
                android:textSize="20sp"
                android:singleLine="true"
                android:inputType="numberDecimal"
                />

            <EditText
                android:id="@+id/getComputerCredit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/translucent"
                android:layout_marginHorizontal="12dp"
                android:hint="请输入计算机学分"
                android:textColorHint="#7B7D7D"
                android:textCursorDrawable="@null"
                android:textSize="20sp"
                android:singleLine="true"
                android:inputType="numberDecimal"
                />



            <Button
                android:id="@+id/get"
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="#5DADE2"
                android:text="查看"
                android:textSize="30sp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>