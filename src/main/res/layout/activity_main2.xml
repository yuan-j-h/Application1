<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#9BCEF1">

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="成绩评估"
                android:textColor="#000000"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/next"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/scorereport"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

            <Button
                android:id="@+id/last"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/last"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/chinese"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="语文"
                android:textColor="#000000"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/ChineseScore"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="50dp" />
            <TextView
                android:id="@+id/ChinesePoint"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="130dp"/>
            <TextView
                android:id="@+id/gradeChinese"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textColor="#000000"
                android:textSize="40sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/math"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="数学"
                android:textColor="#000000"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/MathScore"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="50dp" />

            <TextView
                android:id="@+id/MathPoint"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="130dp"/>
            <TextView
                android:id="@+id/gradeMath"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="#000000"
                android:textSize="40sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            tools:ignore="MissingConstraints"
            android:layout_gravity="center_horizontal">


            <TextView
                android:id="@+id/english"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="大英"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/EnglishScore"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="50dp" />

            <TextView
                android:id="@+id/EnglishPoint"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="130dp"/>
            <TextView
                android:id="@+id/gradeEnglish"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="#000000"
                android:textSize="40sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/computer"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="计算机"
                android:textColor="#000000"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/ComputerScore"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="50dp" />

            <TextView
                android:id="@+id/ComputerPoint"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="130dp"/>
            <TextView
                android:id="@+id/gradeComputer"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="#000000"
                android:textSize="40sp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="187dp"
                android:layout_height="220dp"
                android:background="#FFFFFF">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="平均分"
                    android:textColor="#000000"
                    android:textSize="22sp" />
                <TextView
                    android:id="@+id/average"
                    android:layout_width="87dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="100dp"
                    android:textColor="#000000"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="总绩点"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:layout_marginTop="50dp" />
                <TextView
                    android:id="@+id/sumPoint"
                    android:layout_width="87dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="50dp"
                    android:textColor="#000000"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="总学分"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:layout_marginTop="100dp" />
                <TextView
                    android:id="@+id/sumCredit"
                    android:layout_width="87dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="100dp"
                    android:textColor="#000000"
                    android:textSize="20sp"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="187dp"
                android:layout_height="220dp"
                android:background="#FFFFFF"
                >
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:text="稳定性"
                    android:textColor="#000000"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/stability"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentRight="true"
                    android:textColor="#000000"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:text="评级"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:layout_marginTop="92dp"/>
                <TextView
                    android:id="@+id/grade"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="40sp"
                    android:layout_marginTop="92dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>